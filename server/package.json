{
    "name": "playground-server",
    "version": "0.1.0",
    "description": "Magnificent type-safe server.",
    "dependencies": {
        "@types/node": "10.0.3",
        "@types/express": "4.11.1",
        "express": "4.17.1"
    },
    "devDependencies": {
        "nodemon": "1.19.1",
        "typescript": "3.4.3",
        "ts-node": "8.3.0"
    },
    "scripts": {
        "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
        "start:watch": "nodemon",
        "build": "tsc"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}